---
import Layout from "../../layouts/Layout.astro";
import RedSocial from "./RedSocial.astro";
---

<Layout title="footer">
  <footer
    class="min-h-screen bg-[#21192f] flex flex-col justify-center items-center md:bg-[#000000e1]"
  >
    <div>
      <h2 class="text-white text-4xl font-bold py-4 tracking-wide">Shortly</h2>
    </div>
    <div class="text-center">
      <h4>Features</h4>
      <ul>
        <li>Link Shortening</li>
        <li>Branded Links</li>
        <li>Analytics</li>
      </ul>
      <h4>Resources</h4>
      <ul>
        <li>Blog</li>
        <li>Developer</li>
        <li>Support</li>
      </ul>
      <h4>Company</h4>
      <ul>
        <li>About</li>
        <li>Our Team</li>
        <li>Careers</li>
        <li>Contact</li>
      </ul>
    </div>
    <div class="flex flex-row justify-center items-center">
      <RedSocial />
    </div>

    <style>
      h4 {
        color: white;
        font-size: 1rem;
        padding-top: 0.3rem;
        padding-bottom: 1rem;
      }
      ul {
        padding-top: 0.3rem;
        padding-bottom: 0.2rem;
      }
      li {
        color: gray;
        padding: 0.1rem;
      }
      @media (min-width: 768px) {
        h2 {
          font-size: 2.7rem;
          padding-bottom: 35px;
        }
        h4 {
          font-size: 1.3rem;
        }
        li {
          font-size: 1.5rem;
        }
      }
    </style>
  </footer>
</Layout>
